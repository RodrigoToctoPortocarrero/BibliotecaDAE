	<parameter name="idUsuarioLector" class="java.lang.Integer">
		<defaultValueExpression><![CDATA[]]></defaultValueExpression>
	</parameter>
	<queryString>
		<![CDATA[SELECT
    L.titulo AS "Titulo_Libro",
    E.NroEjemplar AS "Nro_Ejemplar",
    DD.multa AS "Monto_Multa", -- Multa individual por ejemplar
    M.fechagenerada AS "Fecha_Generacion",
    CASE WHEN M.pagado = TRUE THEN 'SÍ' ELSE 'NO' END AS "Pagado"
FROM
    DETALLE_DEVOLUCION DD
JOIN
    DEVOLUCION D ON DD.iddevolucion = D.iddevolucion
JOIN
    PRESTAMO P ON D.idprestamo = P.idprestamo
JOIN
    EJEMPLAR E ON DD.idejemplar = E.idejemplar
JOIN
    LIBROS L ON E.idlibro = L.idlibro
JOIN
    MULTA M ON P.idprestamo = M.idprestamo -- Unimos para obtener el estado de pago
WHERE
    P.idusuariolector = $P{idUsuarioLector} -- Filtramos por el lector
    AND DD.multa > 0 -- Solo mostramos ítems donde se generó multa individual
ORDER BY
    M.fechagenerada DESC;]]>
	</queryString>
