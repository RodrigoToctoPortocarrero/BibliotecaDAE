	<parameter name="p_nombreAutor" class="java.lang.String">
		<defaultValueExpression><![CDATA[]]></defaultValueExpression>
	</parameter>
	<queryString>
		<![CDATA[SELECT
     a.nombres || ' ' || a.apepaterno || ' ' || a.apematerno AS "Nombre Completo Autor",
     l.titulo AS "Título del Libro",
     l.aniopublicacion AS "Año",
     c.nombrecategoria AS "Categoría"
FROM AUTOR a
INNER JOIN ASIGNAR_LIBRO_AUTOR ala ON a.idautor = ala.idautor
INNER JOIN LIBROS l ON ala.idlibro = l.idlibro
INNER JOIN CATEGORIA c ON l.idcategoria = c.idcategoria
WHERE
    -- Aquí usamos el NUEVO parámetro p_nombreAutor
    (a.nombres || ' ' || a.apepaterno || ' ' || a.apematerno) ILIKE '%' || $P{p_nombreAutor} || '%']]>
	</queryString>
